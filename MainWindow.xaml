<Window x:Class="BeamNGLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BeamNG Launcher"
        Width="1100"
        Height="720"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="84"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部栏 -->
        <Border Grid.Row="0"
                Background="#252525"
                Padding="12"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="96"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">

                    <!-- 版本信息 -->
                    <TextBlock x:Name="VersionText"
                               Foreground="#EAEAEA"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Text="BeamNG.drive | Version -"/>
                    <TextBlock x:Name="PathText"
                               Foreground="#B8B8B8"
                               FontSize="12"
                               TextTrimming="CharacterEllipsis"
                               Text="Path: -"/>

                    <!-- 启动参数预览（由右侧开关/下拉框自动生成） -->
                    <DockPanel Margin="0,8,0,0">
                        <TextBlock Foreground="#9E9E9E"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Text="启动参数："
                                   Margin="0,0,8,0"/>
                        <TextBox x:Name="LaunchArgsTextBox"
                                 Height="26"
                                 FontSize="12"
                                 Foreground="#EAEAEA"
                                 Background="#1C1C1C"
                                 BorderBrush="#3A3A3A"
                                 BorderThickness="1"
                                 Padding="8,3"
                                 IsReadOnly="True"
                                 Text="-gfx vk -console"/>
                    </DockPanel>

                </StackPanel>

                <!-- 窗口按钮 -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top">
                    <Button Width="40" Height="28" Margin="0,0,6,0"
                            Content="—"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Click="Minimize_Click"/>
                    <Button Width="40" Height="28"
                            Content="✕"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Click="Close_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主体 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- 左：mods -->
                <ColumnDefinition Width="300"/>
                <!-- 右：主区域 -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧 Mods 列表 -->
            <Border Grid.Column="0" Background="#1C1C1C">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="44"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Mods (.zip)"
                               Foreground="#DADADA"
                               FontSize="13"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="12,0,12,0"/>

                    <ListBox x:Name="ModsList"
                             Grid.Row="1"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Height="44" Margin="8,6"
                                        Background="#2A2A2A" CornerRadius="6">
                                    <TextBlock Text="{Binding FileName}"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               Margin="10,0"
                                               TextTrimming="CharacterEllipsis"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 右侧：参数区 + 启动按钮 -->
            <Grid Grid.Column="1" Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0"
                              VerticalScrollBarVisibility="Auto"
                              Padding="16">
                    <StackPanel>

                        <!-- 渲染 / 图形 -->
                        <GroupBox Header="渲染"
                                  Foreground="#EAEAEA"
                                  BorderBrush="#3A3A3A"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">
                                <DockPanel Margin="0,6,0,0">
                                    <TextBlock Foreground="#CFCFCF"
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-gfx"/>
                                    <ComboBox x:Name="GfxCombo"
                                              Height="28"
                                              SelectionChanged="AnyOptionSelectionChanged">
                                        <ComboBoxItem Content="默认(不指定)" Tag="default" IsSelected="True"/>
                                        <ComboBoxItem Content="dx11" Tag="dx11"/>
                                        <ComboBoxItem Content="vk (Vulkan)" Tag="vk"/>
                                        <ComboBoxItem Content="null (无渲染)" Tag="null"/>
                                    </ComboBox>
                                </DockPanel>

                                <CheckBox x:Name="HeadlessCheck"
                                          Content="-headless（无窗口）"
                                          Foreground="#DADADA"
                                          Margin="0,10,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 启动到地图/车辆 -->
                        <GroupBox Header="启动内容"
                                  Foreground="#EAEAEA"
                                  BorderBrush="#3A3A3A"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">

                                <DockPanel Margin="0,6,0,0">
                                    <TextBlock Foreground="#CFCFCF"
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-level"/>
                                    <ComboBox x:Name="LevelCombo"
                                              Height="28"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              SelectionChanged="AnyOptionSelectionChanged"/>
                                </DockPanel>

                                <DockPanel Margin="0,10,0,0">
                                    <TextBlock Foreground="#CFCFCF"
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-vehicle"/>
                                    <ComboBox x:Name="VehicleCombo"
                                              Height="28"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              SelectionChanged="AnyOptionSelectionChanged"/>
                                </DockPanel>

                            </StackPanel>
                        </GroupBox>

                        <!-- 调试 / 控制台 -->
                        <GroupBox Header="调试"
                                  Foreground="#EAEAEA"
                                  BorderBrush="#3A3A3A"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="ConsoleCheck"
                                          Content="-console（额外开控制台窗口）"
                                          Foreground="#DADADA"
                                          Margin="0,6,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>
                                <CheckBox x:Name="CefDevCheck"
                                          Content="-cefdev（CEF 开发/调试）"
                                          Foreground="#DADADA"
                                          Margin="0,8,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 崩溃报告 -->
                        <GroupBox Header="崩溃报告"
                                  Foreground="#EAEAEA"
                                  BorderBrush="#3A3A3A"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">
                                <RadioButton x:Name="CrashDefaultRadio"
                                             Content="默认(不指定)"
                                             Foreground="#DADADA"
                                             GroupName="Crash"
                                             IsChecked="True"
                                             Checked="AnyOptionChanged"/>
                                <RadioButton x:Name="CrashFullRadio"
                                             Content="-fullcrashreport"
                                             Foreground="#DADADA"
                                             Margin="0,8,0,0"
                                             GroupName="Crash"
                                             Checked="AnyOptionChanged"/>
                                <RadioButton x:Name="CrashNoneRadio"
                                             Content="-nocrashreport"
                                             Foreground="#DADADA"
                                             Margin="0,8,0,0"
                                             GroupName="Crash"
                                             Checked="AnyOptionChanged"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Lua / Exec -->
                        <GroupBox Header="Lua / Exec"
                                  Foreground="#EAEAEA"
                                  BorderBrush="#3A3A3A"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">

                                <DockPanel Margin="0,6,0,0">
                                    <TextBlock Foreground="#CFCFCF"
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-lua"/>
                                    <TextBox x:Name="LuaChunkTextBox"
                                             Height="28"
                                             Foreground="#EAEAEA"
                                             Background="#1C1C1C"
                                             BorderBrush="#3A3A3A"
                                             TextChanged="AnyOptionTextChanged"/>
                                </DockPanel>

                                <DockPanel Margin="0,10,0,0">
                                    <TextBlock Foreground="#CFCFCF"
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-exec"/>
                                    <TextBox x:Name="ExecTextBox"
                                             Height="28"
                                             Foreground="#EAEAEA"
                                             Background="#1C1C1C"
                                             BorderBrush="#3A3A3A"
                                             TextChanged="AnyOptionTextChanged"/>
                                </DockPanel>

                                <CheckBox x:Name="LuaStdinCheck"
                                          Content="-luastdin"
                                          Foreground="#DADADA"
                                          Margin="0,10,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>
                                <CheckBox x:Name="LuaDebugCheck"
                                          Content="-luadebug"
                                          Foreground="#DADADA"
                                          Margin="0,8,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>

                            </StackPanel>
                        </GroupBox>

                        <!-- tcom（高危功能） -->
                        <GroupBox Header="tcom（高危）"
                                  Foreground="#EAEAEA"
                                  BorderBrush="#3A3A3A"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="TcomCheck"
                                          Content="-tcom（启用）"
                                          Foreground="#DADADA"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>

                                <DockPanel Margin="0,10,0,0">
                                    <TextBlock Foreground="#CFCFCF"
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-tport"/>
                                    <TextBox x:Name="TportTextBox"
                                             Height="28"
                                             Foreground="#EAEAEA"
                                             Background="#1C1C1C"
                                             BorderBrush="#3A3A3A"
                                             TextChanged="AnyOptionTextChanged"/>
                                </DockPanel>

                                <DockPanel Margin="0,10,0,0">
                                    <TextBlock Foreground="#CFCFCF"
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-tcom-listen-ip"/>
                                    <TextBox x:Name="TcomListenIpTextBox"
                                             Height="28"
                                             Foreground="#EAEAEA"
                                             Background="#1C1C1C"
                                             BorderBrush="#3A3A3A"
                                             TextChanged="AnyOptionTextChanged"/>
                                </DockPanel>

                                <CheckBox x:Name="TcomDebugCheck"
                                          Content="-tcom-debug"
                                          Foreground="#DADADA"
                                          Margin="0,10,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 额外参数 -->
                        <GroupBox Header="额外参数"
                                  Foreground="#EAEAEA"
                                  BorderBrush="#3A3A3A"
                                  Margin="0,0,0,90">
                            <StackPanel Margin="10">
                                <TextBox x:Name="ExtraArgsTextBox"
                                         Height="28"
                                         Foreground="#EAEAEA"
                                         Background="#1C1C1C"
                                         BorderBrush="#3A3A3A"
                                         TextChanged="AnyOptionTextChanged"
                                         Text=""/>
                                <TextBlock Foreground="#8E8E8E"
                                           Margin="0,8,0,0"
                                           FontSize="12"
                                           Text="这里可手动补充其它参数（不会被覆盖）。"/>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>

                <!-- 启动按钮 -->
                <Button Grid.Row="1"
                        Content="启动游戏"
                        Width="240"
                        Height="60"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,28,18"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#2ECC71"
                        BorderThickness="0"
                        Click="Launch_Click"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
