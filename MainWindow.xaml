<Window x:Class="BeamNGLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BeamNG Launcher"
        Width="1100"
        Height="720"
        WindowStyle="None"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="84"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部栏 -->
        <Border Grid.Row="0"
                Padding="12"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="96"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">

                    <!-- 版本信息 -->
                    <TextBlock x:Name="VersionText"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Text="BeamNG.drive | Version -"/>
                    <TextBlock x:Name="PathText"
                               FontSize="12"
                               TextTrimming="CharacterEllipsis"
                               Text="Path: -"/>

                    <!-- 启动参数预览（由右侧开关/下拉框自动生成） -->
                    <DockPanel Margin="0,8,0,0">
                        <TextBlock x:Name="LaunchArgsLabel"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Text="启动参数："
                                   Margin="0,0,8,0"/>
                        <TextBox x:Name="LaunchArgsTextBox"
                                 Height="26"
                                 FontSize="12"
                                 BorderThickness="1"
                                 Padding="8,3"
                                 IsReadOnly="True"
                                 Text="-gfx vk -console"/>
                    </DockPanel>

                </StackPanel>

                <!-- 窗口按钮 -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top">
                    <Button Width="40" Height="28" Margin="0,0,6,0"
                            Content="—"
                            BorderThickness="0"
                            Click="Minimize_Click"/>
                    <Button Width="40" Height="28"
                            Content="✕"
                            BorderThickness="0"
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主体 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- 左：菜单 -->
                <ColumnDefinition Width="220"/>
                <!-- 右：主区域 -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧菜单 -->
            <Border Grid.Column="0">
                <StackPanel Margin="10,14,10,10">
                    <TextBlock x:Name="MenuTitleText"
                               Text="功能菜单"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="4,0,0,10"/>

                    <Button x:Name="MenuLaunchButton"
                            Content="启动设置"
                            Tag="Launch"
                            Height="40"
                            Margin="0,0,0,8"
                            BorderThickness="0"
                            Click="MenuButton_Click"/>
                    <Button x:Name="MenuModsButton"
                            Content="Mod 管理"
                            Tag="Mods"
                            Height="40"
                            Margin="0,0,0,8"
                            BorderThickness="0"
                            Click="MenuButton_Click"/>
                    <Button x:Name="MenuPage3Button"
                            Content="页面 3"
                            Tag="Page3"
                            Height="40"
                            Margin="0,0,0,8"
                            BorderThickness="0"
                            Click="MenuButton_Click"/>
                    <Button x:Name="MenuPage4Button"
                            Content="页面 4"
                            Tag="Page4"
                            Height="40"
                            BorderThickness="0"
                            Click="MenuButton_Click"/>
                </StackPanel>
            </Border>

            <!-- 右侧：页面区域 -->
            <Grid Grid.Column="1">
                <Grid x:Name="LaunchPage">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="16">
                        <StackPanel>

                        <!-- 渲染 / 图形 -->
                        <GroupBox x:Name="RenderGroupBox"
                                  Header="渲染"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">
                                <DockPanel Margin="0,6,0,0">
                                    <TextBlock
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-gfx"/>
                                    <ComboBox x:Name="GfxCombo"
                                              Height="28"
                                              SelectionChanged="AnyOptionSelectionChanged">
                                        <ComboBoxItem Content="默认(不指定)" Tag="default" IsSelected="True"/>
                                        <ComboBoxItem Content="dx11" Tag="dx11"/>
                                        <ComboBoxItem Content="vk (Vulkan)" Tag="vk"/>
                                        <ComboBoxItem Content="null (无渲染)" Tag="null"/>
                                    </ComboBox>
                                </DockPanel>

                                <CheckBox x:Name="HeadlessCheck"
                                          Content="-headless（无窗口）"
                                          Margin="0,10,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 启动到地图/车辆 -->
                        <GroupBox x:Name="LaunchContentGroupBox"
                                  Header="启动内容"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">

                                <DockPanel Margin="0,6,0,0">
                                    <TextBlock
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-level"/>
                                    <ComboBox x:Name="LevelCombo"
                                              Height="28"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              SelectionChanged="AnyOptionSelectionChanged"/>
                                </DockPanel>

                                <DockPanel Margin="0,10,0,0">
                                    <TextBlock
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-vehicle"/>
                                    <ComboBox x:Name="VehicleCombo"
                                              Height="28"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              SelectionChanged="AnyOptionSelectionChanged"/>
                                </DockPanel>

                            </StackPanel>
                        </GroupBox>

                        <!-- 调试 / 控制台 -->
                        <GroupBox x:Name="DebugGroupBox"
                                  Header="调试"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="ConsoleCheck"
                                          Content="-console（额外开控制台窗口）"
                                          Margin="0,6,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>
                                <CheckBox x:Name="CefDevCheck"
                                          Content="-cefdev（CEF 开发/调试）"
                                          Margin="0,8,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 崩溃报告 -->
                        <GroupBox x:Name="CrashGroupBox"
                                  Header="崩溃报告"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">
                                <RadioButton x:Name="CrashDefaultRadio"
                                             Content="默认(不指定)"
                                             GroupName="Crash"
                                             IsChecked="True"
                                             Checked="AnyOptionChanged"/>
                                <RadioButton x:Name="CrashFullRadio"
                                             Content="-fullcrashreport"
                                             Margin="0,8,0,0"
                                             GroupName="Crash"
                                             Checked="AnyOptionChanged"/>
                                <RadioButton x:Name="CrashNoneRadio"
                                             Content="-nocrashreport"
                                             Margin="0,8,0,0"
                                             GroupName="Crash"
                                             Checked="AnyOptionChanged"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Lua / Exec -->
                        <GroupBox x:Name="LuaExecGroupBox"
                                  Header="Lua / Exec"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">

                                <DockPanel Margin="0,6,0,0">
                                    <TextBlock
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-lua"/>
                                    <TextBox x:Name="LuaChunkTextBox"
                                             Height="28"
                                             TextChanged="AnyOptionTextChanged"/>
                                </DockPanel>

                                <DockPanel Margin="0,10,0,0">
                                    <TextBlock
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-exec"/>
                                    <TextBox x:Name="ExecTextBox"
                                             Height="28"
                                             TextChanged="AnyOptionTextChanged"/>
                                </DockPanel>

                                <CheckBox x:Name="LuaStdinCheck"
                                          Content="-luastdin"
                                          Margin="0,10,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>
                                <CheckBox x:Name="LuaDebugCheck"
                                          Content="-luadebug"
                                          Margin="0,8,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>

                            </StackPanel>
                        </GroupBox>

                        <!-- tcom（高危功能） -->
                        <GroupBox x:Name="TcomGroupBox"
                                  Header="tcom（高危）"
                                  Margin="0,0,0,12">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="TcomCheck"
                                          Content="-tcom（启用）"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>

                                <DockPanel Margin="0,10,0,0">
                                    <TextBlock
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-tport"/>
                                    <TextBox x:Name="TportTextBox"
                                             Height="28"
                                             TextChanged="AnyOptionTextChanged"/>
                                </DockPanel>

                                <DockPanel Margin="0,10,0,0">
                                    <TextBlock
                                               Width="110"
                                               VerticalAlignment="Center"
                                               Text="-tcom-listen-ip"/>
                                    <TextBox x:Name="TcomListenIpTextBox"
                                             Height="28"
                                             TextChanged="AnyOptionTextChanged"/>
                                </DockPanel>

                                <CheckBox x:Name="TcomDebugCheck"
                                          Content="-tcom-debug"
                                          Margin="0,10,0,0"
                                          Checked="AnyOptionChanged"
                                          Unchecked="AnyOptionChanged"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 额外参数 -->
                        <GroupBox x:Name="ExtraArgsGroupBox"
                                  Header="额外参数"
                                  Margin="0,0,0,90">
                            <StackPanel Margin="10">
                                <TextBox x:Name="ExtraArgsTextBox"
                                         Height="28"
                                         TextChanged="AnyOptionTextChanged"
                                         Text=""/>
                                <TextBlock x:Name="ExtraArgsHintText"
                                           Margin="0,8,0,0"
                                           FontSize="12"
                                           Text="这里可手动补充其它参数（不会被覆盖）。"/>
                            </StackPanel>
                        </GroupBox>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- 启动按钮 -->
                    <Button x:Name="LaunchButton"
                            Grid.Row="1"
                            Content="启动游戏"
                            Width="240"
                            Height="60"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,28,18"
                            FontSize="18"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="Launch_Click"/>
                </Grid>

                <Grid x:Name="ModsPage" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="16,16,16,8">
                        <TextBlock x:Name="ModsIntroText"
                                   Text="支持拖拽 .zip 安装，或使用按钮导入。"
                                   FontSize="12"/>
                        <TextBlock x:Name="ModsPathText"
                                   FontSize="12"
                                   Margin="0,6,0,0"
                                   Text="Mods 路径：-"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="16,0,16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                CornerRadius="6"
                                Margin="0,0,10,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="44"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Margin="10,6,10,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="ModsListTitleText"
                                               Text="Mods (.zip)"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                    <Button x:Name="RefreshModsButton"
                                            Grid.Column="1"
                                            Width="56"
                                            Height="24"
                                            Margin="6,0,0,0"
                                            Content="刷新"
                                            BorderThickness="0"
                                            Click="RefreshMods_Click"/>
                                </Grid>

                                <ListBox x:Name="ModsList"
                                         Grid.Row="1"
                                         BorderThickness="0"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         AllowDrop="True"
                                         DragEnter="ModsList_DragEnter"
                                         Drop="ModsList_Drop"
                                         SelectionChanged="ModsList_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Height="40" Margin="8,6" CornerRadius="6">
                                                <TextBlock Text="{Binding FileName}"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <TextBlock x:Name="ModsDragHintText"
                                           Grid.Row="2"
                                           Text="提示：将 .zip 模组拖入此处即可安装"
                                           FontSize="11"
                                           Margin="10,6,10,10"/>
                            </Grid>
                        </Border>

                        <GroupBox x:Name="SelectedModGroupBox"
                                  Header="已选择的 Mod"
                                  Grid.Column="1"
                                  Margin="0,0,8,0">
                            <StackPanel Margin="10">
                                <TextBlock x:Name="SelectedModNameText"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Text="未选择 Mod"/>
                                <TextBlock x:Name="SelectedModSizeText"
                                           Margin="0,6,0,0"
                                           Text="大小：-"/>
                                <TextBlock x:Name="SelectedModVehicleText"
                                           Margin="0,6,0,0"
                                           Text="识别的车辆目录：-"/>
                                <TextBlock x:Name="SelectedModPngCountText"
                                           Margin="0,6,0,0"
                                           Text="PNG 数量：-"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox x:Name="PngListGroupBox"
                                  Header="PNG 列表"
                                  Grid.Column="2"
                                  Margin="8,0,0,0">
                            <ListBox x:Name="ModPngListBox"
                                     BorderThickness="0"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        </GroupBox>
                    </Grid>

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="16,12,16,16">
                        <Button x:Name="InstallZipButton"
                                Width="110"
                                Height="30"
                                Margin="0,0,8,0"
                                Content="导入 Zip"
                                BorderThickness="0"
                                Click="InstallZip_Click"/>
                        <Button x:Name="OpenModsFolderButton"
                                Width="120"
                                Height="30"
                                Content="打开 Mods 目录"
                                BorderThickness="0"
                                Click="OpenModsFolder_Click"/>
                    </StackPanel>
                </Grid>

                <Grid x:Name="Page3" Visibility="Collapsed">
                    <TextBlock x:Name="Page3PlaceholderText"
                               Text="页面 3：预留内容"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Grid>

                <Grid x:Name="Page4" Visibility="Collapsed">
                    <StackPanel Margin="24" VerticalAlignment="Top">
                        <TextBlock x:Name="SettingsTitleText"
                                   Text="设置"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"/>

                        <GroupBox x:Name="LanguageGroupBox"
                                  Header="语言"
                                  Margin="0,0,0,16">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock x:Name="LanguageLabel"
                                               Text="选择语言："
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                                    <ComboBox x:Name="LanguageCombo"
                                              Width="160"
                                              Height="28"
                                              SelectionChanged="LanguageCombo_SelectionChanged">
                                        <ComboBoxItem Content="简体中文" Tag="zh-CN"/>
                                        <ComboBoxItem Content="English" Tag="en-US"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox x:Name="AboutGroupBox"
                                  Header="关于">
                            <StackPanel Margin="10">
                                <TextBlock x:Name="CreatedByText"
                                           Text="Create By 小白151"
                                           FontSize="14"
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="GithubLinkText"
                                           Text="GitHub 地址：https://github.com/JackieZ123430/BeamNG.Drive-Launcher"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="PreReleaseText"
                                           Text="当前为 Pre-Release"
                                           FontSize="12"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
