<Window x:Class="BeamNGLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:pages="clr-namespace:BeamNGLauncher.Pages"
        Title="BeamNG Launcher"
        Width="1160"
        Height="760"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="84"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部栏 -->
        <Border Grid.Row="0"
                Background="{DynamicResource MaterialDesignCardBackground}"
                Padding="12"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="96"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">

                    <!-- 版本信息 -->
                    <TextBlock x:Name="VersionText"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Text="BeamNG.drive | Version -"/>
                    <TextBlock x:Name="PathText"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               FontSize="12"
                               TextTrimming="CharacterEllipsis"
                               Text="Path: -"/>

                    <!-- 启动参数预览（由右侧开关/下拉框自动生成） -->
                    <DockPanel Margin="0,8,0,0">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Text="启动参数："
                                   Margin="0,0,8,0"/>
                        <TextBox x:Name="LaunchArgsTextBox"
                                 Height="28"
                                 FontSize="12"
                                 Padding="8,3"
                                 IsReadOnly="True"
                                 Text="-gfx vk -console"/>
                    </DockPanel>

                </StackPanel>

                <!-- 窗口按钮 -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top">
                    <Button Width="40" Height="28" Margin="0,0,6,0"
                            Content="—"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="Minimize_Click"/>
                    <Button Width="40" Height="28"
                            Content="✕"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="Close_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主体 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- 左：菜单 -->
                <ColumnDefinition Width="240"/>
                <!-- 右：主区域 -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧菜单 -->
            <Border Grid.Column="0" Background="{DynamicResource MaterialDesignCardBackground}">
                <StackPanel Margin="16,18,16,16">
                    <TextBlock Text="功能菜单"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="4,0,0,10"/>

                    <Button Content="启动设置"
                            Tag="Launch"
                            Height="40"
                            Margin="0,0,0,8"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="MenuButton_Click"/>
                    <Button Content="Mod 管理"
                            Tag="Mods"
                            Height="40"
                            Margin="0,0,0,8"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="MenuButton_Click"/>
                    <Button Content="页面 3"
                            Tag="Page3"
                            Height="40"
                            Margin="0,0,0,8"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="MenuButton_Click"/>
                    <Button Content="页面 4"
                            Tag="Page4"
                            Height="40"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="MenuButton_Click"/>
                </StackPanel>
            </Border>

            <!-- 右侧：页面区域 -->
            <Grid Grid.Column="1" Background="{DynamicResource MaterialDesignPaper}">
                <pages:LaunchPage x:Name="LaunchPageControl"/>
                <pages:ModsPage x:Name="ModsPageControl" Visibility="Collapsed"/>
                <pages:Page3 x:Name="Page3Control" Visibility="Collapsed"/>
                <pages:Page4 x:Name="Page4Control" Visibility="Collapsed"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
